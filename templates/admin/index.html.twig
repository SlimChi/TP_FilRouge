{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href='../../css/styles.css' type="text/css">
{% endblock %}

{% block body %}
	<h1 class="text-center wbkg">User index</h1>

	<div class="tabby" style="padding:10px;display:table;">
		<table class="table">
			<thead>
				<tr>
					<th>Username</th>
					<th>Roles</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.username }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>

						<td>
							<a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-outline-dark">Show</a>
							<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-info">Edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="tabby">
		<a href="{{ path('user_new') }}" class="btn btn-success btn-lg">Create new</a>
	</div>
{% endblock %}
