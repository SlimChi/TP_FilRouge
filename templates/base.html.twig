<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		{% block stylesheets %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	</head>
	<body>
		<header class="d-flex justify-content-center py-3 navcolor">
			<ul class="nav nav-pills">
				{% if app.user %}
					<li class="nav-item">
						<a href="/tasks/{{ app.user }}" class="btn btn-outline-info me-2">Tasks</a>
					</li>
					{% if is_granted("ROLE_ADMIN") %}
						<li class="nav-item">
							<a href="/tasks/all" class="btn btn-outline-info me-2">All Tasks</a>
						</li>
						<li class="nav-item">
							<a href="/admin/users" class="btn btn-outline-info me-2">Users</a>
						</li>
						<li class="nav-item">
							<a href="/admin/income" class="btn btn-outline-info me-2">Income</a>
						</li>
					{% endif %}
					<li class="nav-item">
						<a href="/logout" class="btn btn-outline-danger me-2">Logout</a>
					</li>
				{% else %}
					<li class="nav-item">
						<h3>To see the navbar options you need to log in.</h3>
					</li>
				{% endif %}
			</ul>
		</header>


		{% block body %}{% endblock %}

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

	</body>
	{% block javascripts %}{% endblock %}
</html>
