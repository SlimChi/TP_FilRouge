{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href='../../css/styles.css' type="text/css">
{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>TaskId</th>
                <td>{{ task.taskId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ task.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ task.address }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ task.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="/tasks/{{ app.user}}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
