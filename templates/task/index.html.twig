{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href='../../css/styles.css' type="text/css">
{% endblock %}

{% block body %}
    <h1>Task index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Task ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>

                <td>{{ task.taskId }}</td>
                <td>{{ task.name }}</td>           <td>
                    <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-outline-dark">Show</a>
                    <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-outline-info">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ app.user }}/new" class="btn btn-success btn-lg">Create new</a>
{% endblock %}
